<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="res_partner_inherited_form" model="ir.ui.view">
        <field name="name">res.partner.inherited.form</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <notebook position="inside">
                <page string="Website" name="website_page">
                    <field name="show_in_website" string="Show in Website"/>
                    <field name="selected_partners_ids" attrs="{'invisible': [('show_in_website','=', False)]}"
                           context="{'default_partner_id': 'id'}"/><!-- attrs="{'invisible': [('show_in_website','=', False)]}"-->
                </page>
            </notebook>
        </field>
    </record>
</odoo>